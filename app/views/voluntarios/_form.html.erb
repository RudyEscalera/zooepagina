  <div class="field">
    <%= f.label :lugar_nacimiento %><br>
    <%= f.text_field :lugar_nacimiento ,placeholder:"Lugar Nacimiento"%>
  </div>
  <div class="field">
    <%= f.label :estado_civil %><br>
    <%= f.select(:estado_civil,options_for_select([['Casado', "casado"], ['Soltero',"soltero"]], 2))%>

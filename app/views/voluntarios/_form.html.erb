      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :ci %><br>
    *<%= f.number_field :ci ,placeholder:"ci"%>
  </div>
  <div class="field">
    <%= f.label :nombre %><br>
    *<%= f.text_field :nombre ,placeholder:"nombre"%>
  </div>
  <div class="field">
    <%= f.label :apellido_paterno %><br>

  </div>
  <div class="field">
    <%= f.label :telefono_movil %><br>
    <%= f.number_field :telefono_movil,placeholder:"Telefono Movil" %>
  </div>
  <div class="field">
    <%= f.label :Correo %><br>
    <%= f.text_field :email,placeholder:" Correo" %>
  </div>
  <div class="field">
    <%= f.label :licensia_conducir %><br>
    <%= f.number_field :licensia_conducir,placeholder:"Licensia de conducir" %>
  </div>
  <div class="field">
    <%= f.label :formacion_academica %><br>
    <%= f.text_area :formacion_academica,placeholder:"Formacion Academica" %>
  </div>
  <div class="actions">

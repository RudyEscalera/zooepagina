<%= form_for(@persona) do |f| %>
  <% if @persona.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@persona.errors.count, "") %> ERRORES PROHIBIDOS:</h2>

      <ul>
      <% @persona.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :ci %><br>*
    <%= f.text_field :ci, :required => true %>
  </div>
  <div class="field">
    <%= f.label :nombres %><br>*
    <%= f.text_field :nombres, :required => true %>
  </div>
  <div class="field">
    <%= f.label :apellido_paterno %><br>*
    <%= f.text_field :apellido_paterno, :required => true %>
  </div>
  <div class="field">
    <%= f.label :apellido_materno %><br>
    <%= f.text_field :apellido_materno %>
  </div>
  <div class="field">
    *
    <%= f.label :fecha_nacimiento %><br>
    <%= f.date_select :fecha_nacimiento, :start_year => 1940, :end_year => 2005, :required => true %>
  </div>
  <div class="actions">
    <%= f.submit :Guardar, :class => 'btn btn-success' %>
  </div>
<% end %>

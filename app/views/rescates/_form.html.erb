      <h2><%= pluralize(@rescate.errors.count, "error") %> prohibited this rescate from being saved:</h2>

      <ul>
      <% @rescate.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :direccion_rescate %><br>
    *<%= f.text_field :direccion_rescate%>
  </div>
  <div class="field">
    <%= f.label :observacion %><br>
    <%= f.text_area :observacion, :maxlength =>"50"%>
  </div>
  <div class="field">
    <%= f.label :fecha %><br>

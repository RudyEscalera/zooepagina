  </div>
  <div class="field">
		<%= f.label :voluntario %><br>
		<%= f.select :voluntario,options_for_select(Voluntario.where( estado: "true").pluck(:nombre, :id)) %>
  </div>
  <div class="actions">
		<%= link_to '<< Atras', rescates_path , class:"btn btn-default" %>
    <%= f.submit :Guardar,class:"btn btn-success"%>


    <%= form_for(@noticium) do |f| %>
      <% if @noticium.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@noticium.errors.count, "") %>ERRORES PROHIBIDOS :</h2>

          <ul>
          <% @noticium.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <br>
      <div class="field col-md-5">
        <%= f.label :titulo %>*
        <%= f.text_field :titulo, :class => "form-control input" %>
      </div>
      <br>
      <div class="field col-md-4">
        <%= f.label :categoria %>
        <%= f.select(:categoria,options_for_select([['Evento', "evento"], ['Noticia',"noticia"]], 2)) %>
      </div>
      <br>
      <div class="field col-md-5">
        <%= f.label :contenido %>*
        <%= f.text_area :contenido, :class => "form-control input" %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit :Guardar, :class => 'btn btn-success' %>
      </div>
    <% end %>

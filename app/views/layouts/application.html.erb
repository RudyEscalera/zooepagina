<!DOCTYPE html>
<html>
<head>
  <title>Zooepagina</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation ">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Zooe</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to 'Registrar Voluntario', new_voluntario_path%></li>
            <li><%= link_to 'Registrar Rescate', new_rescate_path %></li> 
            <li><%= link_to 'Registrar Veterinaria', new_veterinarium_path%>  </li>
          <% if user_signed_in? %>
          <% if current_user.admin? %>
            <li ><%= link_to('Lista de Usuarios', {:controller => :home, :action => :listausuarios})%></li>
            <li ><%= link_to('Logout', destroy_user_session_path, 
              :method => :delete) %></li>
            <%else%>
            <li><%= link_to('Editar Perfil', edit_user_registration_path) %></li>
            <li><%= link_to('Logout', destroy_user_session_path, 
              :method => :delete) %></li>
            <%end%>
        <% else %>
          <li ><%= link_to('Registrarse', new_user_registration_path) %></li>
          <li ><%= link_to('Login', new_user_session_path)  %></li>
        <% end %>
          </ul>
					
        </div><!--/.nav-collapse -->
      </div>
    </div>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
	</br>
</br>
</br>
<!-- barra izquierda -->

<div class= "barraizquierdafijo">
  <div class='row'>
  <div class="col-lg-4" style="width: 28%;">
    <div class="page-header"style="position:fixed; top:15%; left:20px;">
        <div class="btn-group-vertical">  
          <%= link_to 'Veterinaria', veterinaria_path,:class=>"btn btn-success btn-lg"%>
          <%= link_to 'Voluntario', voluntarios_path, class: "btn btn-success btn-lg" %>
          <%= link_to 'Rescate', rescates_path, class: "btn btn-success btn-lg" %>
          <a href="/mascota" class="btn btn-success btn-lg">Mascotas </a>
          <a href="/noticia" class="btn btn-success btn-lg">Noticias</a>
          <a href="/hogar_temporals" class="btn btn-success btn-lg">Hogar Temporal</a>
          <!-- <a href="/adopciones" class="btn btn-success btn-lg"> -->
            <!-- <img src="/assets/hogar.png" style="width:50px;height:50px"> -->
            <!-- Adopciones -->
          <!-- </a> -->
          <%= link_to 'Adopciones', adopcions_path, class: "btn btn-success btn-lg" %>

          </div>
</div>
</div>



<!-- pie de pagina -->		 	 
    <div class="contenido">
      <div class="starter-template">
        <p class="lead"><%= yield %>   
					<!-- pie de pagina --> 
				</p>
      </div>
    </div>
</body>
</html>

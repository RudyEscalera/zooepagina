<!DOCTYPE html>
<html>
<head>
  <title>Zooepagina</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation ">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Zooe</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
          <% if user_signed_in? %>
            <li><%= link_to('Editar Perfil', edit_user_registration_path) %></li> 
            <li><%= link_to('Salir', destroy_user_session_path, 
              :method => :delete) %></li>
            <li>  <%= link_to 'Mascotas', publico_mascota_path %></li>
            <li>  <%= link_to 'Noticias', public_noticia_path %></li>
            
          <% else %>
            <li>  <%= link_to 'Mascotas', publico_mascota_path %></li>
            <li>  <%= link_to 'Noticias', public_noticia_path %></li>
            <li ><%= link_to('Registrarse', new_user_registration_path) %></li>
            <li ><%= link_to('Login', new_user_session_path)  %></li>

          <% end %>
          </ul>
					
        </div><!--/.nav-collapse -->
      </div>
    </div>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
	</br>
</br>
</br>
<!-- barra izquierda -->
<div class= "barraizquierdafijo">
  <div class='row'>
  <div class="col-lg-4" style="width: 28%;">
    <div class="page-header"style="position:fixed; top:15%; left:20px;">
        <div class="btn-group-vertical"> 
        <% if user_signed_in? %>
          <% if current_user.estado?  %>
          <a href="#" 
          data-toggle="modal"
          data-target="#modalVeterinaria">Veterinaria</a>

           <a href="#" 
          data-toggle="modal"
          data-target="#modalVoluntario">Voluntario</a>

          <a href="#"
          data-toggle="modal"
          data-target="#modalRescate">Rescate</a>
          
          <a href="/mascota">Mascotas </a>
          <a href="/noticia">Noticias</a>
          <% if current_user.admin? %>
          <%= link_to 'Usuarios', lista_usuario_path%>
          <% end -%>
         
          <a href="/hogar_temporals">Hogar Temporal</a>
          <%= link_to 'Adopciones', adopcions_path%>
<% end %>
<% end %>
          </div>
</div>
</div>




<!-- pie de pagina -->		 	 
  
        <p class="lead"><%= yield %>   
					<!-- pie de pagina --> 
				</p>
</body>
</html>

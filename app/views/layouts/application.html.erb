<!DOCTYPE html>
<html>
<head>
  <title>Zooepagina</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>

      <link rel="stylesheet" href="//code.jquery.com/ui/1.11.2/themes/smoothness/jquery-ui.css">
      <link rel="stylesheet" href="/resources/demos/style.css">
      <script src="//code.jquery.com/jquery-1.10.2.js"></script>
      <script src="//code.jquery.com/ui/1.11.2/jquery-ui.js"></script>
</head>
<body background="/assets/fondo.jpg">
  <div class="navbar navbar-inverse navbar-fixed-top" role="navigation ">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">Zooe</a>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
        <% if user_signed_in? %>
          <li>  <%= link_to 'Mascotas', publico_mascota_path %></li>
          <li>  <%= link_to 'Noticias', public_noticia_path %></li>
          <li><%= link_to('Editar Perfil', edit_user_registration_path) %></li> 
          <li><%= link_to('Salir', destroy_user_session_path, 
            :method => :delete) %></li>
        <% else %>
          <li>  <%= link_to 'Mascotas', publico_mascota_path %></li>
          <li>  <%= link_to 'Noticias', public_noticia_path %></li>
          <li>  <%= link_to 'Veterinaria', veterinaria_path %></li>
          <li ><%= link_to('Registrarse', new_user_registration_path) %></li>
          <li ><%= link_to('Login', new_user_session_path)  %></li>

        <% end %>
        </ul>
				
      </div><!--/.nav-collapse -->
    </div>
  </div>

<!-- Division de la pagina en dos lado izq y derecho -->

      <!-- barra izquierda -->

      <div class="list-group" style="width:18%">
          <% if user_signed_in? %>
            <% if current_user.estado?  %>
            <li><%= link_to 'Veterinaria' , veterinaria_path, class: "list-group-item", :style=>"border-radius: 15px 15px 15px 15px;"%></li>
            <li><%= link_to 'Voluntario' , voluntarios_path, class: "list-group-item", :style=>"border-radius: 15px 15px 15px 15px;"%></li>
            <li><%= link_to 'Rescate' , rescates_path, class: "list-group-item", :style=>"border-radius: 15px 15px 15px 15px;"%></li>
              
              <li><a href="/mascota" class="list-group-item" style="border-radius: 15px 15px 15px 15px;">Mascotas </a></li>
              <li><a href="/noticia" class="list-group-item" style="border-radius: 15px 15px 15px 15px;">Noticias</a></li>
              <% if current_user.admin? %>
                <li><%= link_to 'Usuarios' , lista_usuario_path, class: "list-group-item", :style=>"border-radius: 15px 15px 15px 15px;"%></li>
              <% end -%>
              <li><a href="/hogar_temporals" class="list-group-item" style="border-radius: 15px 15px 15px 15px;">Hogar Temporal </a></li>
              <li> <%= link_to 'Adopciones', adopcions_path, class: "list-group-item", :style=>"border-radius: 15px 15px 15px 15px;"%></li>
            <% end %>
          <% end %>
      </div>
      <br>
      <br>
      <br>
      <!-- seccion del contenido -->
        <div class="contenido">
      <div class="starter-template">
          
            <%= yield %>
    </div>
  </div>


</body>
</html>
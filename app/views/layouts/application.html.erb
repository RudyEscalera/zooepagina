<!DOCTYPE html>
<html>
<head>
  <title>Zooepagina</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
</head>
<body background="/assets/fondo2.jpg">
  <div class="navbar navbar-inverse navbar-fixed-top" role="navigation ">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">Zooe</a>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
        <% if user_signed_in? %>
          <li>  <%= link_to 'Mascotas', publico_mascota_path %></li>
          <li>  <%= link_to 'Noticias', public_noticia_path %></li>
          <li><%= link_to('Editar Perfil', edit_user_registration_path) %></li> 
          <li><%= link_to('Salir', destroy_user_session_path, 
            :method => :delete) %></li>
        <% else %>
          <li>  <%= link_to 'Mascotas', publico_mascota_path %></li>
          <li>  <%= link_to 'Noticias', public_noticia_path %></li>
          <li>  <%= link_to 'Veterinaria', veterinaria_path %></li>
          <li ><%= link_to('Registrarse', new_user_registration_path) %></li>
          <li ><%= link_to('Login', new_user_session_path)  %></li>

        <% end %>
        </ul>
				
      </div><!--/.nav-collapse -->
    </div>
  </div>

<!-- Division de la pagina en dos lado izq y derecho -->
  <div class="container-fluid">
    <div class="row">
      <!-- barra izquierda -->
      <div class="col-xs-4" style="width:30%">
        <ul>
          <% if user_signed_in? %>
            <% if current_user.estado?  %>
              <li>
              <a href="#" class="list-group-item" 
              data-toggle="modal"
              data-target="#modalVeterinaria">Veterinaria</a></li>

              <li><a href="#"  class="list-group-item"
              data-toggle="modal"
              data-target="#modalVoluntario">Voluntario</a></li>

              <li><a href="#" class="list-group-item"
              data-toggle="modal"
              data-target="#modalRescate">Rescate</a></li>
              
              <li><a href="/mascota" class="list-group-item">Mascotas </a></li>
              <li><a href="/noticia" class="list-group-item">Noticias</a></li>
              <% if current_user.admin? %>
                <li><%= link_to 'Usuarios' , lista_usuario_path, class: "list-group-item"%></li>
              <% end -%>
              <li><a href="/hogar_temporals" class="list-group-item">Hogar Temporal </a></li>
              <li> <%= link_to 'Adopciones', adopcions_path, class: "list-group-item"%></li>
            <% end %>
          <% end %>
        </ul>
      </div>
      <br>
      <br>
      <br>
      <!-- seccion del contenido -->
      <div class="container">
        <div class="col-xs-9 ">
          
            <%= yield %>
          
        </div>
      </div>
    </div>
  </div>






        
          


<div class="modal fade" id="modalVeterinaria" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
       <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Veterinaria</h4>
      </div>
      <div class="modal-body" style="text-align:center;">
        <div class="table-responsive">
                  <%= link_to 'Buscar Veterinaria', veterinaria_path,:class=>"btn btn-info btn-lg"%>
                  <%= link_to 'Registrar Veterinaria', new_veterinarium_path, :class=>"btn btn-info btn-lg"  %>  
        </div>
        </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>


<!-- Modal Voluntario-->  
<div class="modal fade" id="modalVoluntario" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
       <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Voluntario</h4>
      </div>
      <div class="modal-body" style="text-align:center;">
        <div class="table-responsive">
                  <%= link_to 'Buscar Voluntario', voluntarios_path, class: "btn btn-info btn-lg" %>
                  <%= link_to 'Registrar Voluntario', new_voluntario_path, class: "btn btn-info btn-lg"%> 
        </div>
        </div>
        <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>

<!-- Modal Rescate-->  
<div class="modal fade" id="modalRescate" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
       <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Rescate</h4>
      </div>
      <div class="modal-body" style="text-align:center;">
        <div class="table-responsive">
                  <%= link_to 'Buscar Rescate', rescates_path, class: "btn btn-info btn-lg" %>  
                  <%= link_to 'Registrar Rescate', new_rescate_path, class: "btn btn-info btn-lg" %> 
        </div>
        </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>



</body>
</html>
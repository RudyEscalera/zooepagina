<%= form_for(@mascotum, :html => { :multipart => true }) do |f| %>
  <% if @mascotum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@mascotum.errors.count, "") %> ERRORES PROHIBIDOS:</h2>

      <ul>
      <% @mascotum.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div >
    *
    <%= f.label :nombre %>
    <%= f.text_field :nombre, :required => true %>
  </div>
  <div >
    <%= f.label :especie %>
    <%if params[:id] != nil %>
      <%if @mascotum.especie == 'gato' %>
        <%= f.select(:especie,options_for_select([['Perro', "perro"], ['Gato',"gato",:selected=>true]], 2)) %>
      <%else%>
        <%= f.select(:especie,options_for_select([['Perro', "perro",:selected=>true], ['Gato',"gato"]], 2)) %>
      <%end%>
    <%else%>
      <%= f.select(:especie,options_for_select([['Perro', "perro"], ['Gato',"gato"]], 2)) %>
    <%end%>
  </div>



  
  <div >
    *
    <%= f.label :raza %>
    <%= f.text_field :raza, :required => true %>
  </div>
  <div >
    <%= f.label :sexo %>
    <%if params[:id] != nil %>
      <%if @mascotum.sexo == 'macho' %>
        <%= f.select(:sexo,options_for_select([['Macho', "macho",:selected=>true], ['Hembra',"hembra"]], 2)) %>
      <%else%>
        <%= f.select(:sexo,options_for_select([['Macho', "macho"], ['Hembra',"hembra",:selected=>true]], 2)) %>
      <%end%>
    <%else%>
      <%= f.select(:sexo,options_for_select([['Macho', "macho"], ['Hembra',"hembra"]], 2)) %>
    <%end%>

  </div>
  <div >
    *
    <label for="edad">Edad meses</label>
    <%= f.number_field :edad, :required => true %>
  </div>
  <div >
    *
    <%= f.label :color %>
    <%= f.text_field :color, :required => true %>
  </div>
  <div >
    <%= f.label :estado %>
    <%= f.select(:estado,options_for_select([['Adopcion', "adopcion"], ['Recuperacion',"recuperacion"], ['Adoptado',"adoptado"]], 3)) %>

  </div>
  
  <div >
    <%= f.label :observacion %>
    <%= f.text_area :observacion, :rows => 10, :cols => 30%>
  </div>

  
  <div class="actions">
    <%= f.submit :Guardar, :class => 'btn btn-success' %>
  </div>
<% end %>

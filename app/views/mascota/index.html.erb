<center>
  <h1>Buscar Mascotas</h1>
</center>

<%= form_tag({:controller => "mascota", :action => "index"}, :method => :get) do %>
    <%= text_field_tag "searchbox", params[:searchbox], :placeholder => "Buscar" %>
    <%= submit_tag "Buscar", :name => nil %>
<% end %>

<br>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Especie</th>
        <th>Raza</th>
        <th>Sexo</th>
        <th>Edad</th>
        <!-- <th>Color</th> -->
        <th>Estado</th>
        <!-- <th>Depar</th> -->
        <!-- <th>Hexa</th> -->
        <!-- <th>Octa</th> -->
        <!-- <th>Anti</th> -->
        <!-- <th>Esterilizacion</th> -->
        <!-- <th>Observacion</th> -->
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @mascota.each do |mascotum| %>
        <tr>
          <td><%= mascotum.nombre %></td>
          <td><%= mascotum.especie %></td>
          <td><%= mascotum.raza %></td>
          <td><%= mascotum.sexo %></td>
          <td><%= mascotum.edad %></td>
          <!-- <td><%= mascotum.color %></td> -->
          <td><%= mascotum.estado %></td>
          <!-- <td><%= mascotum.depar %></td> -->
          <!-- <td><%= mascotum.hexa %></td> -->
          <!-- <td><%= mascotum.octa %></td> -->
          <!-- <td><%= mascotum.anti %></td> -->
          <!-- <td><%= mascotum.esterilizacion %></td> -->
          <!-- <td><%= mascotum.observacion %></td> -->
          <td><%= link_to 'Ver Mascota', mascotum %></td>
          <td><%= link_to 'Editar Mascota', edit_mascotum_path(mascotum) %></td>
          <td><%= link_to 'Destroy', mascotum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Registrar Mascota', new_mascotum_path %>
</div>